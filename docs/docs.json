{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Apivalk",

  "colors": {
    "primary": "#6366F1",
    "light": "#6366F1",
    "dark": "#6366F1"
  },

  "fonts": {
    "family": "Inter"
  },

  "background": {
    "decoration": "gradient"
  },

  "favicon": "/img/logo.svg",

  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "configuration",
              "contributing",
              "deprecating-upgrade",
              "installation",
              "support-policy-release-cycle"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/coding-standards",
              "concepts/request-lifecycle",
              "concepts/structure",
              "concepts/best-openapi-practices"
            ]
          },
          {
            "group": "HTTP",
            "pages": [
              "http/index",
              "http/controller",
              "http/request",
              "http/response"
            ]
          },
          {
            "group": "Routing",
            "pages": [
              "routing/index",
              "routing/route",
              "routing/router",
              "routing/rate-limit"
            ]
          },
          {
            "group": "Cache",
            "pages": [
              "cache/index",
              "cache/filesystem-cache"
            ]
          },
          {
            "group": "Middleware",
            "pages": [
              "middleware/index",
              "middleware/request-validation",
              "middleware/sanitize",
              "middleware/authentication",
              "middleware/security",
              "middleware/rate-limit"
            ]
          },
          {
            "group": "Documentation (OpenAPI)",
            "pages": [
              "documentation/index",
              "documentation/docblock-generator",
              "documentation/openapi-generator",
              "documentation/property",
              "documentation/property-collection",
              "documentation/request",
              "documentation/response",
              "documentation/response-objects"
            ]
          },
          {
            "group": "Core System",
            "pages": [
              "core/error-handling",
              "core/events",
              "util"
            ]
          },
          {
            "group": "Security",
            "pages": [
              "security/index",
              "security/identity",
              "security/authenticator"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "customization/customization"
            ]
          },
          {
            "group": "API Standards",
            "pages": [
              "open-api-best-practices/01-overview",
              "open-api-best-practices/02-rest-design-and-naming",
              "open-api-best-practices/03-versioning-and-structure",
              "open-api-best-practices/04-pagination-filtering-sorting",
              "open-api-best-practices/05-responses-errors-status-codes",
              "open-api-best-practices/06-localization-i18n"
            ]
          }
        ]
      }
    ],

    "global": {
      "anchors": [
        {
          "anchor": "Releases",
          "href": "https://github.com/apivalk/apivalk/releases",
          "icon": "newspaper"
        }
      ]
    }
  },

  "logo": {
    "light": "/img/logo.svg",
    "dark": "/img/logo.svg"
  },

  "navbar": {
    "primary": {
      "type": "button",
      "label": "Main page",
      "href": "https://apivalk.com"
    }
  },

  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },

  "footer": {
    "socials": {
      "github": "https://github.com/apivalk"
    }
  }
}
